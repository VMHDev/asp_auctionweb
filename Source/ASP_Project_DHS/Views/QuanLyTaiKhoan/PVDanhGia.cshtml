@using ASP_Project_DHS.Models
@model List<NhanXet>

<h3>
    Tổng:
    <span>
        @ViewBag.User.DanhGiaTot
        <i class="fa fa-thumbs-o-up" style="color: green" aria-hidden="true"></i>
        /@ViewBag.User.DanhGiaXau
        <i class="fa fa-thumbs-o-down" style="color: red" aria-hidden="true"></i>
    </span>
</h3>
@{
    int i = 0;

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Người đánh giá</th>
                <th>Thời gian</th>
                <th>Nhận xét</th>
                <th>Vai trò</th>
                <th>Loại</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (item == null)
                {
                    continue;
                }
                <tr>
                    <td style="height: 113px">
                        <div class="hinhtable">
                            <div class="align_vertical hinh">
                                <a href="@Url.Action("ChiTiet", "DauGia", new { id = item.ID})">
                                    <img class="img-responsive" src="~/assets/images/DauGia/@item.ID_DauGia/daidien.jpg" alt="">
                                </a>
                            </div>
                        </div>
                        <a style="margin-left:95px" href="@Url.Action("ChiTiet", "DauGia", new { id = item.ID_DauGia})">@ViewBag.DSDG[i].Ten</a>
                    </td>
                    <td><a href="@Url.Action("ThongTin", "Account", new { id = ViewBag.DSTK[i].ID})">@ViewBag.DSTK[i].HoTen</a></td>
                    <td>@item.Ngay.Value.ToString(string.Format("HH:mm:ss, dd/MM/yyyy"))</td>
                    <td>@item.LoiNhanXet</td>
                    @if (item.LaNguoiBan == true)
                    {
                        <td style="text-align: center">
                            Mua
                        </td>
                    }
                    else
                    {
                        <td style="text-align: center">
                            Bán
                        </td>
                    }
                    @if (item.Like == true)
                    {
                        <td style="text-align: center">
                            <i class="fa fa-thumbs-o-up" style="color: green" aria-hidden="true"></i>
                        </td>
                    }
                    else
                    {
                        <td style="text-align: center">
                            <i class="fa fa-thumbs-o-down" style="color: red" aria-hidden="true"></i>
                        </td>
                    }
                </tr>
                i++;
            }
        </tbody>
    </table>
}

