@using ASP_Project_DHS.Models
@model TaiKhoan
@{
    ViewBag.Title = "Thông tin cá nhân";
}
@section css{
    <style>
        .align_vertical img {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translateX(-50%) translateY(-50%);
            max-width: 100%;
            max-height: 100%;
        }
    </style>
    
}
<!--Banner Starts-->
<div class="main-container container">
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
        <li class="active">Thông tin cá nhân</li>
    </ol>
</div>
<!--Banner Ends-->

<div class="content">
    <div class="products-agileinfo">
        <h2 class="tittle">Thông tin cá nhân</h2>
        <div class="container">
            <div class="product-agileinfo-grids w3l">
                <!--partialview danhmuc-->
                <div class="col-md-3 product-agileinfo-grid">
                    @Html.Action("DanhMucLon", "DauGia")
                </div>
                <!--partialview danhmuc-->
                <div class="col-md-9 descr">
                    <p class="quote">
                        Họ tên: <a href="#0" class="text-success" style="font-size:x-large">@Model.HoTen</a>
                        <br />
                        <br />Số ĐT: <span class="text-success" style="font-size:x-large">@Model.SoDienThoai</span>
                        <br />
                        <br />Email: <span class="text-success" style="font-size:x-large">@Model.Email</span>
                        <br />
                        <br />Điểm đánh giá:
                        <span class="text-success" style="font-size:x-large">
                            @(Model.DanhGiaTot - Model.DanhGiaXau) ( @Model.DanhGiaTot <i class="fa fa-thumbs-o-up" style="color: green" aria-hidden="true"></i> - @Model.DanhGiaXau <i class="fa fa-thumbs-o-down" style="color: red" aria-hidden="true"></i> )
                        </span>
                    </p>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
</div>
<!--content-->

